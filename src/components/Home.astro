<div id="konata" class="konata -bottom-65 right-5 peek">
    <div id="dialog" class="hide max-w-70 w-max mb-3 bg-white text-black text-right p-2 rounded-lg font-bold">
        Hey hay!
    </div>
    <Image src={Konata} alt="Konata-San" width="500" class="translate-x-10 w-52" loading="eager" />
</div>

<script>
    const konata = document.getElementById("konata");
    const dialog = document.getElementById("dialog");
    const socmed = document.getElementById("socmed");

    (async () => {
        await sleep(1);

        // Startup
        konata?.classList.remove("peek");
        newDialog();
        await sleep(2);

        newDialog("What are you looking for?");
        await sleep(3);

        newDialog("Oh?");
        await sleep(1);

        newDialog("Suprised?");
        await sleep(2);

        newDialog("Hehe that's okay");
        await sleep(2);

        newDialog("So as you can see...");
        await sleep(2);

        newDialog("This website is not finished yet");
        await sleep(3);

        newDialog("Because the dev is too lazy to code");
        await sleep(3);

        newDialog("The only information I have is the dev's social media");
        socmed?.classList.add("show");
        await sleep(4);

        newDialog("I'll leave it there in case you need it, okay? Cool. Cya!");
        konata?.classList.remove("jump");
        konata?.classList.add("peek");
        await sleep(6);
        
        konata?.classList.add("gone");
        dialog?.classList.add("hide");
    })();

    // Functions
    function newDialog(text?: string) {
        if (!dialog) return;

        if (dialog.classList.contains("hide")) {
            dialog.classList.remove("hide");
        }

        if (text && konata) {
            konata.classList.add("jump");
            dialog.innerText = text;
            setTimeout(() => {
                konata.classList.remove("jump");
            }, 150);
        }
    }

    function sleep(second: number): Promise<number> {
        return new Promise((r) => setTimeout(r, second * 1000))
    }
</script>